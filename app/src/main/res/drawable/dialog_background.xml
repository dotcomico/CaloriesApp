<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- צבע רקע מעט שונה מהמסך -->
    <solid android:color="@color/dialogBackground" /> <!-- מעט כהה מהלבן שלך -->

    <!-- עיגול פינות עדין -->
    <corners android:topLeftRadius="16dp"
        android:topRightRadius="16dp" />

    <!-- הצללה או קו גבול דק -->
    <stroke android:color="@color/dialogBorder" android:width="1dp" />
    <padding android:left="16dp" android:right="16dp" android:top="16dp" android:bottom="16dp" />
</shape>
