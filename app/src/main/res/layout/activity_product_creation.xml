<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".ui.screens.ProductCreationActivity">
    <!-- כותרת עליונה - כתומה (חיפוש עצמי) -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:visibility="visible"
        android:background="@color/orange"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/round_arrow_right_white" />

        <TextView
            app:drawableLeftCompat="@drawable/ic_baseline_search_24_white"
            app:drawableStartCompat="@drawable/ic_baseline_search_24_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="חיפוש עצמי"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingVertical="2.5dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/sty_ss"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/moveToCustomProductActivity"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_baseline_food_bank_24_white" />
    </RelativeLayout>
    <!-- מסך "יצירת מוצר חדש" (אתר) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar">

        <WebView
        android:id="@+id/webview"
        android:background="#FDB72A"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:windowSoftInputMode="adjustResize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#00FFFFFF"
                android:padding="0dp">

                <!-- כפתור לפתיחת כרטיסיית חיפוש עצמי (כתום) -->
                <ImageView
                    android:id="@+id/showDialogSheet"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_gravity="right"
                    android:background="@drawable/circle_orang"
                    android:contentDescription="@string/show_add_product_dialog"
                    android:src="@drawable/baseline_arrow_drop_up_white"
                    android:visibility="visible" />

            </LinearLayout>
        </ScrollView>
</RelativeLayout>
</RelativeLayout>