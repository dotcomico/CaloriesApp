<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@android:color/transparent"
    android:windowSoftInputMode="adjustResize">
    <!-- כתום - כרטיסיית יצירת מוצר חדש   -->
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/ly_customProductBottomSheet"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_orang_background">

        <LinearLayout
            android:id="@+id/ly_productCreationForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="מוצר חדש"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/newProductNameEditText"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="3dp"
                    android:ems="10"
                    android:gravity="right"
                    android:textColorHint="#CCCCCC"
                    android:textColor="#000"
                    android:maxLines="1"
                    android:hint="מוצר"
                    android:imeOptions="actionNext"
                    android:inputType="textShortMessage"
                    android:background="@drawable/edit_text_background"
                    />
                <ImageView
                    android:id="@+id/iv_barcodeScan"
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_qr_code"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/newProductCaloriesEditText"
                android:hint="קלוריות"  android:drawableRight="@drawable/ic_baseline_local_fire_department"
                android:drawableEnd="@drawable/ic_baseline_local_fire_department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:textColorHint="#CCCCCC"
                android:layout_marginHorizontal="3dp"
                android:textColor="#000"
                android:ems="10"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:background="@drawable/edit_text_background"
                />


            <com.example.calories.ui.views.UnitSelectorView
                android:id="@+id/unit_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="13dp">
                <Button
                    android:id="@+id/saveNewProductItemButton"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:text="הוסף מוצר"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:id="@+id/saveAndStay"
                    android:layout_weight="8"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_add"
                    android:background="@drawable/sty_w_b"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <Button
                android:visibility="gone"
                android:id="@+id/webSearchSuggestion"
                android:text="הצעה לחיפוש"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/sty_blue_serch"
                android:drawableRight="@drawable/ic_baseline_search"
                />
            <android.widget.SearchView
                android:id="@+id/selfSearchSearchView"
                android:focusable="false"
                android:layout_height="50dp"
                android:queryHint="חיפוש נוסף"
                android:background="#E6A21C"
                android:layout_width="match_parent"
                android:contextClickable="true"
                />
        </LinearLayout>

    </LinearLayout>

</ScrollView>