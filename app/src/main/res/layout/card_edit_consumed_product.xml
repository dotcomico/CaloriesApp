<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@android:color/transparent"
    android:windowSoftInputMode="adjustResize">
    <!--ירוק -   כרטיסיית עריכת מוצר פרטי     -->
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/editConsumedProductLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/sty_green"
        >
        <ImageView
            android:id="@+id/closeEditImg"
            android:visibility="visible"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="1dp"
            android:src="@drawable/ic_baseline_clear_24_w"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="עריכת מוצר"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold"
            />
        <TextView
            android:visibility="gone"
            android:layout_width="120dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="3dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/sty_2_half"
            android:ems="10"
            android:gravity="center"
            android:text="קלוריות"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/consumedProductNameTv"
            android:text="מוצר"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="0dp"
            android:layout_marginHorizontal="3dp"
            android:ems="10"
            android:gravity="center"
            android:textColor="#000"
            android:background="@drawable/sty_2"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="22dp"
            android:orientation="horizontal"
            >
            <TextView
                android:visibility="gone"
                android:layout_weight="1"
                android:text="מדד"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="3dp"
                android:ems="10"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000"
                android:background="@drawable/sty_2"
                />
            <ImageView
                android:visibility="gone"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_circle_24dot"
                />

            <EditText
                android:text="1"
                android:id="@+id/consumedProductNewAmountTv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="3dp"
                android:ems="10"
                android:gravity="center"
                android:textColorHint="#CCCCCC"
                android:textColor="#000"
                android:layout_gravity="center"
                android:maxLines="1"
                android:hint="כמות"
                android:inputType="text"
                android:background="@drawable/sty_2"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="25dp">
            <ImageView
                android:id="@+id/decreaseEditImg"
                android:layout_toRightOf="@+id/increaseEditImg"
                android:padding="8dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/white_circle"
                android:src="@drawable/ic_baseline_horizontal_rule_24"
                />
            <ImageView
                android:id="@+id/increaseEditImg"
                android:layout_alignParentLeft="true"
                android:padding="8dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/white_circle"
                android:src="@drawable/ic_baseline_add_24"
                />
            <Button
                android:id="@+id/saveEdit"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:background="@drawable/sty_w_r"
                android:text="שמור שינויים"
                android:textColor="@color/black"
                />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>