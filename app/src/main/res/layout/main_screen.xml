<!-- main_screen.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <!-- מידע יומי ורשימת מוצרים שנצרכו -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            app:elevation="0dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="@color/primary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <!-- Toolbar שמחזיק את ה-layout המצומצם -->
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin">

                    <LinearLayout
                        android:id="@+id/collapsedLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="12dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/collapsedDateText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="@string/today"
                            android:textColor="@color/primaryText"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/collapsedCaloriesText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="@string/calories"
                            android:textColor="@color/tertiary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>

                <!-- headerLayout - תצוגה מלאה -->
                <LinearLayout
                    android:id="@+id/headerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="12dp"
                    app:layout_collapseMode="parallax">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="12dp">

                        <!-- כותרת בצד שמאל -->
                        <TextView
                            android:id="@+id/titleText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="@string/calorie_tracker"
                            android:textColor="@color/primaryText"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:ignore="RelativeOverlap" />

                        <!-- אייקון הגדרות -->
                        <ImageView
                            android:id="@+id/settingsIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/settings"
                            android:padding="0dp"
                            android:src="@drawable/round_settings" />

                        <ImageView
                            android:id="@+id/shopIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"
                            android:layout_toStartOf="@id/settingsIcon"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/shopping_bag_icon"
                            android:padding="0dp"
                            android:src="@drawable/round_shopping_bag" />

                        <!-- אייקון רשימת מוצרים אישית -->
                        <ImageView
                            android:id="@+id/customListIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"
                            android:layout_toStartOf="@id/shopIcon"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/custom_list_icon"
                            android:padding="0dp"
                            android:src="@drawable/outline_bookmarks"
                            app:tint="@color/primaryText" />

                    </RelativeLayout>

                    <!-- בחירת תאריך -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="32dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/lastDayBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/arrow"
                            android:padding="8dp"
                            android:src="@drawable/round_chevron_left_date_bar" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:text="@string/tue_18"
                            android:textColor="@color/secondaryText"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/currentDateText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/selected_date_bg"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="@string/today"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:text="@string/thu_20"
                            android:textColor="@color/secondaryText"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/nextDayBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/arrow"
                            android:padding="8dp"
                            android:src="@drawable/round_chevron_right_date_bar" />

                    </LinearLayout>

                    <!-- המד המרכזי -->
                    <RelativeLayout
                        android:id="@+id/caloriesLayout"
                        android:layout_width="230dp"
                        android:layout_height="230dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="4dp">

                        <com.example.calories.ui.views.CircularProgressView
                            android:id="@+id/calorieProgressView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/caloriesViewText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ex_calories"
                                android:textColor="@color/primaryText"
                                android:textSize="54sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/caloriesDescriptionText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/calories"
                                android:textColor="@color/secondaryText"
                                android:textSize="20sp" />

                        </LinearLayout>

                    </RelativeLayout>

                    <!-- סיכום ארוחות -->
                    <LinearLayout
                        android:id="@+id/meals"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="@string/breakfast"
                                android:textColor="@color/tertiaryText"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/breakfastCalories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/blank_"
                                android:textColor="@color/secondaryText"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="@string/lunch"
                                android:textColor="@color/tertiaryText"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/lunchCalories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/blank_"
                                android:textColor="@color/secondaryText"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="@string/dinner"
                                android:textColor="@color/tertiaryText"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/dinnerCalories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/blank_"
                                android:textColor="@color/secondaryText"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <!-- רשימה עם padding תחתון לשדה החיפוש -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/consumedProductsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary"
            android:clipToPadding="false"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="80dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- רשימת מוצרים כללית (חיפוש) -->
    <RelativeLayout
        android:id="@+id/catalogLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary"
        android:visibility="gone">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:scrollbarSize="5dp"
            android:scrollbars="vertical"
            android:transcriptMode="alwaysScroll"
            android:visibility="visible"
            app:stackFromEnd="false" />

        <!-- Modern Empty State Screen - Enhanced -->
        <LinearLayout
            android:id="@+id/notFoundLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp"
            android:visibility="gone">

            <!-- Illustration/Icon -->
            <ImageView
                android:id="@+id/emptyStateIcon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="24dp"
                android:alpha="0.6"
                android:contentDescription="@string/empty_state_icon_desc"
                android:src="@drawable/round_no_food"
                app:tint="@color/tertiaryText" />

            <!-- Main title -->
            <TextView
                android:id="@+id/emptyListError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:letterSpacing="0.01"
                android:maxWidth="340dp"
                android:text="@string/product_not_found_title"
                android:textColor="@color/secondaryText"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/emptyListSubText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:alpha="0.85"
                android:gravity="center"
                android:lineSpacingMultiplier="1.3"
                android:maxWidth="320dp"
                android:text="@string/product_not_found_subtext"
                android:textColor="@color/tertiaryText"
                android:textSize="16sp" />

            <!-- Action button with Material Design -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/selfSearchErrorBtn"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/secondary"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="@string/self_search"
                android:textAllCaps="false"
                android:textColor="@color/primaryText"
                android:textSize="16sp"
                app:cornerRadius="25dp"
                app:elevation="6dp"
                app:icon="@drawable/ic_baseline_search"
                app:iconGravity="end"
                app:iconPadding="8dp"
                app:iconTint="@color/selfSearch"
                app:rippleColor="@color/selfSearch" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
