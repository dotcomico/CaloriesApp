<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:id="@+id/main"
    android:background="@drawable/message_sty1">

    <LinearLayout
        android:id="@+id/caloriesLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minWidth="55dp"
        android:minHeight="55dp"
        android:background="@drawable/sty_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/productCalorieValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:scaleY="1.3"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/calorieLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="קלוריות"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:layout_gravity="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/productNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="מוצר"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:gravity="start"
        app:layout_constraintStart_toEndOf="@id/caloriesLinearLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"/>

    <LinearLayout
        android:id="@+id/productUnitContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productNameTextView"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/productUnitTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="מדד"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/productUnitImageView"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/sty_transperent"

            android:scaleType="centerCrop"
            android:layout_marginEnd="4dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
