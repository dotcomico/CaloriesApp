<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:id="@+id/main"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:background="@drawable/list_item_background">
<LinearLayout
    android:id="@+id/icons_container"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:orientation="vertical"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginEnd="0dp">

    <ImageView
        android:id="@+id/starIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/round_star"
        android:contentDescription="@string/measure"
        android:scaleType="fitCenter"
        android:layout_marginEnd="4dp"
        app:tint="@color/favorite" />

    <ImageView
        android:id="@+id/bookmarkIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/round_bookmark"
        android:contentDescription="@string/measure"
        android:scaleType="fitCenter"
        android:layout_marginEnd="4dp"
        app:tint="@color/tertiary" />
</LinearLayout>

    <TextView
        android:id="@+id/productNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="start"
        android:text="@string/ex_product_name"
        android:textColor="@color/primaryText"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/caloriesContainer"
        app:layout_constraintStart_toEndOf="@+id/icons_container"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/productDescriptionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/ex_description"
            android:textColor="@color/secondaryText"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/productNameTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/caloriesContainer"
            android:layout_marginEnd="8dp"
            android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/productUnitContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/caloriesContainer"
        app:layout_constraintStart_toEndOf="@+id/icons_container"
        app:layout_constraintTop_toBottomOf="@id/productDescriptionTextView">

        <ImageView
            android:id="@+id/productUnitImageView"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="@string/measure"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_scale"
            app:tint="@color/secondaryText" />

        <TextView
            android:id="@+id/productUnitTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ex_unit_amount"
            android:textColor="@color/secondaryText"
            android:textSize="14sp" />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/caloriesContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:minWidth="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/productCalorieValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ex_calories"
                android:textSize="22sp"
                android:textColor="@color/primaryText"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/calorieLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calories"
                android:textSize="10sp"
                android:textColor="@color/secondaryText"
                android:fontFamily="sans-serif-light"
                android:layout_gravity="center"
                tools:ignore="SmallSp" />
        </LinearLayout>

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>