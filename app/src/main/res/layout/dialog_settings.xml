<!-- dialog_settings.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_settings"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:padding="15dp"
    android:visibility="visible">

    <TextView
        android:id="@+id/t_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  אפשרויות  "
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:textSize="40sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_clearMainCaloriesList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" מחק כל \n רשימת קלוריות \n (במסך ראשי) "
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:background="#FFA5A5"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_returnToMainScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  חזור למסך ראשי  "
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:textSize="40sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textStyle="bold" />
</LinearLayout>
