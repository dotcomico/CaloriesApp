<!-- top_bar.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_tops_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- כותרת עליונה - כחולה -->
    <RelativeLayout
        android:id="@+id/rl_top"
        android:background="#4187FF"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <Button
            android:id="@+id/lastDayBtn"
            android:text="〈  "
            android:layout_toRightOf="@id/currentDateText"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/sty_w_r"
            android:layout_centerVertical="true"
            android:textColor="#434343" />

        <Button
            android:id="@+id/nextDayBtn"
            android:text="  〉"
            android:gravity="right"
            android:layout_toLeftOf="@id/currentDateText"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/sty_w_r"
            android:layout_centerVertical="true"
            android:textColor="#434343" />

        <TextView
            android:id="@+id/currentDateText"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="היום"
            android:textSize="23sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingVertical="5dp"
            android:textColor="@color/white"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/settingsIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_settings_24" />

        <ImageView
            android:id="@+id/customListIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_baseline_food_bank_24_white" />
    </RelativeLayout>


</RelativeLayout>
