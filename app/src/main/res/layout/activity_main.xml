<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:id="@+id/main"
    tools:context=".ui.screens.MainActivity">

    <!-- תוכן עיקרי של המסך (רשימות, מידע, התראות) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomActionMenu">
        <include layout="@layout/main_screen" />
    </RelativeLayout>

    <!-- תפריט חיפוש תחתון + סריקת ברקוד -->
    <include layout="@layout/bottom_search_menu" />

</RelativeLayout>
